<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_history_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Unutulmaz bir anımız oldu, ne güzeldi o günler..." />

        <TextView
            android:id="@+id/tv_history_context"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_history_message"
            tools:text="💬 2023 Yaz Tatili - O sözün" />

        <TextView
            android:id="@+id/tv_favorite_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_history_context"
            tools:text="Favoriye ekle" />

        <ImageView
            android:id="@+id/iv_react_heart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/desc_react_heart"
            android:src="@drawable/ic_react_heart"
            app:layout_constraintBottom_toBottomOf="@id/tv_favorite_toggle"
            app:layout_constraintStart_toEndOf="@id/tv_favorite_toggle"
            app:layout_constraintTop_toTopOf="@id/tv_favorite_toggle" />

        <!-- iv_add_comment kaldırıldı (kullanılmıyor) -->

        <ImageView
            android:id="@+id/iv_play_audio"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/desc_play_audio"
            android:src="@drawable/ic_play_audio"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/iv_react_heart"
            app:layout_constraintStart_toEndOf="@id/iv_react_heart"
            app:layout_constraintTop_toTopOf="@id/iv_react_heart"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_history_reaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_play_audio"
            app:layout_constraintStart_toEndOf="@+id/iv_play_audio"
            app:layout_constraintTop_toTopOf="@+id/iv_play_audio"
            tools:text="❤️" />

        <TextView
            android:id="@+id/tv_comment_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_comment_box"
            android:padding="8dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_favorite_toggle"
            tools:text="Not: Eşimden gelen yorum burada görünür." />

        <ImageView
            android:id="@+id/iv_history_image"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/desc_history_image"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_comment_text"
            tools:src="@tools:sample/backgrounds/scenic"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_play_video"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/desc_play_video"
            android:src="@drawable/ic_play_video"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_history_image"
            app:layout_constraintEnd_toEndOf="@+id/iv_history_image"
            app:layout_constraintStart_toStartOf="@+id/iv_history_image"
            app:layout_constraintTop_toTopOf="@+id/iv_history_image"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_history_image"
            tools:text="10/10 23:15" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>